.pyg_home {
  width: 100%;
  clear: both;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.pyg_home .srh {
  width: 95%;
  height: 80rpx;
}
.pyg_home .discover_text {
  margin: 30rpx;
  margin-left: 80rpx;
  width: 100%;
}
.pyg_home .discover_text text {
  border-bottom: 4rpx solid #60b173;
  font-size: 40rpx;
  color: #333333;
}
.pyg_home .scroll_tag {
  height: 60rpx;
}
.pyg_home .scroll_tag .flex_tag {
  display: flex;
  flex-wrap: nowrap;
}
.pyg_home .scroll_tag .flex_tag .tag_parent {
  display: inline-block;
}
.pyg_home .scroll_tag .flex_tag .tag_parent .tag_item {
  width: 190rpx;
  height: 60rpx;
  background: #d0e4d5;
  margin-right: 20rpx;
  margin-left: 20rpx;
  border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
}
.pyg_home .scroll_wangpu {
  height: 450rpx;
}
.pyg_home .scroll_wangpu .flex_wangpu {
  display: flex;
  flex-wrap: nowrap;
}
.pyg_home .scroll_wangpu .flex_wangpu .wangpu_parent {
  display: inline-block;
}
.pyg_home .scroll_wangpu .flex_wangpu .wangpu_parent .wangpu_item {
  width: 600rpx;
  height: 450rpx;
  background-color: #fff;
  margin-right: 30rpx;
  margin-left: 30rpx;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
}
.pyg_home .scroll_wangpu .flex_wangpu .wangpu_parent .wangpu_item image {
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
  width: 600rpx;
  height: 300rpx;
}
.pyg_home .scroll_wangpu .flex_wangpu .wangpu_parent .wangpu_item .rate {
  width: 100rpx;
  height: 50rpx;
  background-color: #fff;
  position: absolute;
  margin-left: 20rpx;
  margin-top: 20rpx;
  border-radius: 30rpx;
  line-height: 50rpx;
}
.pyg_home .scroll_wangpu .flex_wangpu .wangpu_parent .wangpu_item .rate .rate_goals {
  margin-left: 10rpx;
}
.pyg_home .scroll_wangpu .flex_wangpu .wangpu_parent .wangpu_item .wangpu_info {
  height: 150rpx;
  display: flex;
  flex-direction: column;
}
.pyg_home .scroll_wangpu .flex_wangpu .wangpu_parent .wangpu_item .wangpu_info .wangpu_info_name {
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 20rpx;
  margin-top: 10rpx;
}
.pyg_home .scroll_wangpu .flex_wangpu .wangpu_parent .wangpu_item .wangpu_info .wangpu_locationNtime {
  display: flex;
  flex-direction: row;
  height: 50rpx;
}
.pyg_home .scroll_wangpu .flex_wangpu .wangpu_parent .wangpu_item .wangpu_info .wangpu_locationNtime .wangpu_location {
  height: 40rpx;
  width: 150rpx;
  margin-left: 20rpx;
}
.pyg_home .scroll_wangpu .flex_wangpu .wangpu_parent .wangpu_item .wangpu_info .wangpu_locationNtime .wangpu_location .wangpu_loc_info {
  line-height: 40rpx;
  margin-left: 20rpx;
}
.pyg_home .scroll_wangpu .flex_wangpu .wangpu_parent .wangpu_item .wangpu_info .wangpu_locationNtime .wangpu_time {
  height: 40rpx;
  width: 150rpx;
  margin-left: 20rpx;
}
.pyg_home .scroll_wangpu .flex_wangpu .wangpu_parent .wangpu_item .wangpu_info .wangpu_locationNtime .wangpu_time .wangpu_time_info {
  line-height: 40rpx;
  margin-left: 20rpx;
}
.pyg_home .scroll_wangpu .flex_wangpu .wangpu_parent .wangpu_item .wangpu_info .associate_tag {
  width: 100%;
  height: 40rpx;
  display: flex;
  flex-direction: row;
}
.pyg_home .scroll_wangpu .flex_wangpu .wangpu_parent .wangpu_item .wangpu_info .associate_tag .associate_tag_item {
  height: 40rpx;
  width: 150rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 30rpx;
  background-color: #60b173;
  margin-left: 20rpx;
}
.pyg_home .antiepd_info {
  width: 90%;
  height: 250rpx;
  border-radius: 30rpx;
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
}
.pyg_home .antiepd_info image {
  width: 190rpx;
  height: 190rpx;
  border-radius: 30rpx;
  margin-left: 30rpx;
}
.pyg_home .antiepd_info .antiepd_info_detail {
  width: 420rpx;
  height: 155rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}
.pyg_home .antiepd_info .antiepd_info_detail .title {
  width: 100%;
  height: 80rpx;
}
.pyg_home .antiepd_info .antiepd_info_detail .sourceNtime {
  width: 100%;
  height: 75rpx;
  display: flex;
  margin-top: 35rpx;
  flex-direction: row;
  justify-content: flex-start;
}
.pyg_home .antiepd_info .antiepd_info_detail .sourceNtime .source {
  width: 120rpx;
  height: 75rpx;
  line-height: 75rpx;
  font-size: 25rpx;
  color: #666;
}
.pyg_home .antiepd_info .antiepd_info_detail .sourceNtime .time {
  width: 120rpx;
  height: 75rpx;
  margin-left: 30rpx;
  line-height: 75rpx;
  font-size: 25rpx;
  color: #666;
}
.tag_hover {
  opacity: 0.9;
  background: #60b173;
  color: #fff;
}
