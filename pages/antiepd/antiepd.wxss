.page swiper {
  width: 95%;
  height: calc(100vw * 498 / 1080);
  border-radius: 20rpx;
  justify-items: center;
}
.page swiper swiper-item {
  border-radius: 30rpx;
}
.page swiper swiper-item image {
  width: 100%;
  border-radius: 20rpx;
}
.page .antiepd_info {
  width: 95%;
  height: 200rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
}
.page .antiepd_info image {
  width: 200rpx;
  height: 170rpx;
  border-radius: 10rpx;
  margin-left: 10rpx;
}
.page .antiepd_info .antiepd_info_detail {
  width: 420rpx;
  height: 160rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}
.page .antiepd_info .antiepd_info_detail .title {
  width: 100%;
  height: 80rpx;
}
.page .antiepd_info .antiepd_info_detail .sourceNtime {
  width: 100%;
  height: 75rpx;
  display: flex;
  margin-top: 35rpx;
  flex-direction: row;
  justify-content: flex-start;
}
.page .antiepd_info .antiepd_info_detail .sourceNtime .source {
  width: 120rpx;
  height: 75rpx;
  line-height: 75rpx;
  font-size: 25rpx;
  color: #666;
}
.page .antiepd_info .antiepd_info_detail .sourceNtime .time {
  width: 120rpx;
  height: 75rpx;
  margin-left: 30rpx;
  line-height: 75rpx;
  font-size: 25rpx;
  color: #666;
}
