.page swiper {
  width: 95%;
  height: calc(100vw * 498 / 1080);
  border-radius: 20rpx;
  justify-items: center;
}
.page swiper swiper-item {
  border-radius: 30rpx;
}
.page swiper swiper-item image {
  width: 100%;
  border-radius: 20rpx;
}
.page .antiepd_info {
  width: 95%;
  height: 200rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
}
.page .antiepd_info image {
  width: 200rpx;
  height: 170rpx;
  border-radius: 10rpx;
  margin-left: 10rpx;
}
.page .antiepd_info .antiepd_info_detail {
  width: 420rpx;
  height: 160rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}
.page .antiepd_info .antiepd_info_detail .title {
  width: 100%;
  height: 80rpx;
}
.page .antiepd_info .antiepd_info_detail .sourceNtime {
  width: 100%;
  height: 75rpx;
  display: flex;
  margin-top: 35rpx;
  flex-direction: row;
  justify-content: flex-start;
}
.page .antiepd_info .antiepd_info_detail .sourceNtime .source {
  width: 120rpx;
  height: 75rpx;
  line-height: 75rpx;
  font-size: 25rpx;
  color: #666;
}
.page .antiepd_info .antiepd_info_detail .sourceNtime .time {
  width: 120rpx;
  height: 75rpx;
  margin-left: 30rpx;
  line-height: 75rpx;
  font-size: 25rpx;
  color: #666;
}
.page .increase_title {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.page .increase_title .increase_title_text {
  font-size: 30rpx;
  margin-left: 20rpx;
  background-color: aqua;
}
.page .increase_title .date {
  margin-left: 290rpx;
  color: #666;
  background-color: aquamarine;
}
.page .increase_info {
  width: 90%;
  border-radius: 5rpx;
  height: 200rpx;
  display: flex;
  background-color: blue;
  align-items: center;
}
.page .increase_info .inner_total {
  width: 120rpx;
  height: 180rpx;
  margin-left: 10rpx;
  background-color: #666;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.page .increase_info .inner_total .inner_total_text1 {
  width: 90rpx;
  height: 30rpx;
  font-size: 25rpx;
  text-align: center;
  line-height: 30rpx;
  background-color: blueviolet;
}
.page .increase_info .inner_total .inner_total_nums {
  width: 120rpx;
  height: 70rpx;
  font-size: 50rpx;
  text-align: center;
  line-height: 70rpx;
  background-color: chartreuse;
}
.page .increase_info .inner_total .inner_total_text2 {
  width: 120rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  background-color: crimson;
}
.page .increase_info .city_total {
  width: 180rpx;
  height: 180rpx;
  margin-left: 20rpx;
  background-color: aqua;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.page .increase_info .city_total .city_total_top {
  width: 180rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background-color: brown;
}
.page .increase_info .outer_input {
  width: 120rpx;
  height: 180rpx;
  margin-left: 20rpx;
  background-color: #666;
}
.page .increase_info .total {
  width: 180rpx;
  height: 180rpx;
  margin-left: 20rpx;
  background-color: aqua;
}
